{
  "name": "educate4dignity-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "build": "tsc -p tsconfig.build.json",
    "build:tsc": "tsc -p tsconfig.build.json",
    "dev:ts": "ts-node -r tsconfig-paths/register src/main.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts",
    "migrate:mock": "ts-node scripts/migrateFromMock.ts",
    "migrate:elearn": "ts-node scripts/migrateElearningFromFrontend.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prestart:prod": "npm run build",
    "start:prod": "npx cross-env PORT=4000 NODE_ENV=production USE_TYPEORM_ONLY=1 PRISMA_DISABLED=1 node dist/main.js",
    "start:prod:pg": "npx cross-env PORT=4000 NODE_ENV=production USE_TYPEORM_ONLY=1 PRISMA_DISABLED=1 DATABASE_URL=postgresql://e4d:e4dpass@127.0.0.1:5432/e4d?schema=public node dist/main.js",
    "start:prod:sqlite": "npx cross-env PORT=4000 NODE_ENV=production USE_TYPEORM_ONLY=1 PRISMA_DISABLED=1 DB_DRIVER=sqlite SQLITE_DB=e4d.sqlite node dist/main.js",
    "start:prod:4001": "npx cross-env PORT=4001 NODE_ENV=production node dist/main.js",
    "start:prod:4003": "npx cross-env PORT=4003 NODE_ENV=production node dist/main.js",
    "free-4000": "npx kill-port 4000",
    "prisma:generate:sqlite": "prisma generate --schema=prisma-sqlite/schema.prisma",
    "prisma:migrate:sqlite": "prisma migrate dev --schema=prisma-sqlite/schema.prisma --name init_sqlite",
    "prisma:seed:sqlite": "set DATABASE_URL=file:./dev.db&& ts-node prisma/seed.ts",
    "start:dev:sqlite": "set DATABASE_URL=file:./dev.db&& npm run prisma:generate:sqlite && npm run prisma:migrate:sqlite && nest start --watch",
    "test:smoke": "ts-node -P tsconfig.smoke.json test/smoke-public.ts",
    "test:smoke:donations": "ts-node -P tsconfig.smoke.json test/smoke-donations-admin.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.3.10",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^10.0.0",
    "@prisma/client": "^5.22.0",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
  "cloudinary": "^2.7.0",
  "prisma": "^5.22.0",
  "ts-node": "^10.9.2",
  "helmet": "^8.1.0",
    "nodemailer": "^6.9.12",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.2",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "stripe": "^16.10.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.3.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.20",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.16",
    "axios": "^1.13.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "kill-port": "^2.0.1",
    "prettier": "^3.3.2",
  "rimraf": "^5.0.5",
  "supertest": "^6.3.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.3.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
